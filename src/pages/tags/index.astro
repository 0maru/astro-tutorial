---
const allBlogs = await Astro.glob("../blogs/*.md");
const tags = [...new Set(allBlogs.map((post) => post.frontmatter.tags).flat())];
---

<!doctype html>
<html lang="ja">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1" />
    </head>
    <body>
        <main>
            <h1>タグ一覧</h1>
            <ul>
                {
                    tags.map((tag) => {
                        return (
                            <li>
                                <a href={`/tags/${tag}`}>{tag}</a>
                            </li>
                        );
                    })
                }
            </ul>
        </main>
    </body>
</html>
